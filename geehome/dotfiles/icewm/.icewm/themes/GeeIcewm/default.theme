ThemeName="GeeIcewm"
ThemeDescription="Minimalistic, flat theme for IceWM, inspired and based on Icewm_nord_style_light and Cupertino"
ThemeAuthor="Tumashu"
License="GPL"
Look=flat


TaskBarEnableSystemTray=1
TaskBarGraphHeight=30
RolloverButtonsSupported=1                  # 0/1
TaskBarShowWindowIcons=1
TaskbuttonIconOffset=2
TrayIconMaxWidth=26
TrayIconMaxHeight=26

TitleBarHeight=24
TitleBarJustify=50
TitleBarHorzOffset=-40
ShowMenuButtonIcon=0                        # 0/1 Show application icon on menuButton
TitleButtonsLeft="s"
TitleButtonsRight="xmi"                     # Rollup button hidden
TitleButtonsSupported="xmis"                # Rollup button hidden

BorderSizeX=2
BorderSizeY=2
DlgBorderSizeX=2
DlgBorderSizeY=2

MenuIconSize=24                             # Menu
SmallIconSize=28                            # Taskbar & Titlebar. Taskbar height = height of linux.xpm. Titlebar height = TitleBarHeight in *.theme
LargeIconSize=32                            # Quickswitch window
HugeIconSize=48                             # ?  Cannot identify what it applies to

Gradients="taskbuttonactive.xpm taskbuttonminimized.xpm workspacebuttonactive.xpm"

