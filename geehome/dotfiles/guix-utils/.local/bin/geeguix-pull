#!/usr/bin/env bash

GUIX_DIR=$HOME/guix/guix

echo ""
read -rp "# Update $GUIX_DIR before guix pull? [yes/NO] " answer
case "${answer,,}" in
    yes)
        echo ""
        echo "## Updating $GUIX_DIR ..."
        cd $GUIX_DIR
        git pull --rebase
        echo ""
        ;;
    *)
        echo ""
        echo "## Aborting update $GUIX_DIR ..."
        echo ""
        ;;
esac

guix pull --disable-authentication --allow-downgrades --url=$GUIX_DIR "$@"
